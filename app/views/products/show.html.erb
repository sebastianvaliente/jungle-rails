<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <h3> Reviews </h3>

    <% if session[:user_id] %>

      <%= form_for :review, url: product_reviews_url(@product.id) do |form| %>

        <div class="form-group">
          <%= form.label :Write_your_review_here %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :Rating %>
          <%= form.select :desired_attribute, ['1', '2', '3', '4', '5'], class: 'form-control' %>
        </div>

        <%= form.submit %>

      <% end %>

    <% end %>

    <h3> Reviews </h3>

    <% if @reviews[0] %>

      <% @r = @reviews.order('created_at DESC') %>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% @r.each do |r| %>
            <% url = "review/" + r.id.to_s %>
            <dt><%= r.user.first_name %> <%= r.user.last_name %></dt>
            <dd>Rating: <%= r.rating %> </dd>
            <dd><%= r.description %> </dd>
            <% if session[:user_id] == r.user_id %>
              <dd> <%= link_to "Delete", url %> </dd>
            <% end %>
          <% end %>
        </dl>
      </div>


    <% else %>

      <h4> There are no reviews for this product </h4>

    <% end %>

  </article>

</section>
